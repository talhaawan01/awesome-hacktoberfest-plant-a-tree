#include <iostream>
#include <limits>

using namespace std;

int main()
{
    double  base,height,area   ;
    
    cout<<"value of base:";
    cout<< 5 <<endl;
    
     cout<<"value of height :";
     cout<< 10 <<endl;
    
    area  = base * height * 1/2  ;
    
    cout<< "area of   " << base <<" and " << height  <<" is " << base * height * 1/2  <<endl;  
    
    return 0;

